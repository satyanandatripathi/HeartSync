{
  "name": "heartsync",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "dev:network": "next dev -p 3000 -H 0.0.0.0",
    "build": "next build",
    "start": "next start",
    "start:network": "next start -H 0.0.0.0",
    "lint": "next lint",
    "server": "node server.js",
    "check-ports": "node check-ports.js",
    "test-connection": "node test-connection.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run server\"",
    "dev:network:all": "concurrently \"npm run dev:network\" \"npm run server\"",
    "deploy": "vercel",
    "deploy:prod": "vercel --prod"
  },
  "dependencies": {
    "next": "^14.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io-client": "^4.6.1",
    "socket.io": "^4.6.1",
    "framer-motion": "^10.16.16",
    "lucide-react": "^0.294.0",
    "react-dropzone": "^14.2.3",
    "uuid": "^9.0.1",
    "date-fns": "^2.30.0",
    "zustand": "^4.4.7",
    "react-confetti": "^6.1.0",
    "canvas-confetti": "^1.9.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.7",
    "typescript": "^5.3.3",
    "tailwindcss": "^3.3.6",
    "postcss": "^8.4.32",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.4",
    "concurrently": "^8.2.2"
  }
}

